<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="com.mojang.util">
    <Appenders>
        <Console name="WINDOWS_COMPAT" target="SYSTEM_OUT"></Console>
        <Queue name="TerminalConsole">
            <PatternLayout pattern="{&quot;time&quot;: &quot;%d{HH:mm:ss}&quot;, &quot;sourceLocation&quot;: &quot;%l&quot;, &quot;thread&quot;: &quot;%t&quot;, &quot;level&quot;: &quot;%level&quot;, &quot;service&quot;: &quot;craft_server&quot;, &quot;:serverType&quot;: &quot;$${env:TYPE}&quot;, &quot;serverUser&quot;: &quot;$${env:SERVER_USER}&quot;, &quot;serverName&quot;: &quot;$${env:SERVER_NAME}&quot;, &quot;msg&quot;: &quot;%msg&quot;}%n" />
        </Queue>
        <RollingRandomAccessFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level]: Craft Server Log: %msg%n" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <OnStartupTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="1000"/>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <filters>
                <MarkerFilter marker="NETWORK_PACKETS" onMatch="DENY" onMismatch="NEUTRAL" />
            </filters>
            <AppenderRef ref="WINDOWS_COMPAT" level="info"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="TerminalConsole" level="info"/>
        </Root>
    </Loggers>
</Configuration>

